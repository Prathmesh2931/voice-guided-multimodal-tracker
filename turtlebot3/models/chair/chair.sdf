    </link>

    <!-- ========== BACK RIGHT LEG (Half Size) ========== -->
    <link name="back_right_leg">
      <pose>-0.0875 -0.0875 0.1125 0 0 0</pose> <!-- Both X,Y: ±0.175 → ±0.0875 -->
