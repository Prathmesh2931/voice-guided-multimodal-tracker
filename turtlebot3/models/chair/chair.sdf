    <pose>0 0 0 0 0 0</pose>

    <!-- ========== SEAT (Half Size) ========== -->
    <link name="seat">
      <pose>0 0 0.225 0 0 0</pose> <!-- Height: 0.45 → 0.225 -->
      <inertial>
        <mass>2.5</mass> <!-- Mass: 5.0 → 2.5 -->
      </inertial>
      <collision name="seat_collision">
        <geometry>
          <box>
            <size>0.225 0.225 0.025</size> <!-- Size: 0.45×0.45×0.05 → 0.225×0.225×0.025 -->
          </box>
        </geometry>
      </collision>
      <visual name="seat_visual">
        <geometry>
          <box>
            <size>0.225 0.225 0.025</size> <!-- Same as collision -->
          </box>
        </geometry>
        <material>
          <ambient>0.6 0.4 0.2 1</ambient>
          <diffuse>0.6 0.4 0.2 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- ========== BACKREST (Half Size) ========== -->
    <link name="backrest">
      <pose>0 -0.1 0.375 0 0 0</pose> <!-- Y: -0.2 → -0.1, Z: 0.75 → 0.375 -->
      <inertial>
        <mass>1.5</mass> <!-- Mass: 3.0 → 1.5 -->
      </inertial>
      <collision name="backrest_collision">
        <geometry>
          <box>
            <size>0.225 0.025 0.3</size> <!-- Size: 0.45×0.05×0.6 → 0.225×0.025×0.3 -->
          </box>
        </geometry>
      </collision>
      <visual name="backrest_visual">
        <geometry>
          <box>
            <size>0.225 0.025 0.3</size> <!-- Same as collision -->
          </box>
        </geometry>
        <material>
          <ambient>0.6 0.4 0.2 1</ambient>
          <diffuse>0.6 0.4 0.2 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- ========== FRONT LEFT LEG (Half Size) ========== -->
    <link name="front_left_leg">
      <pose>0.0875 0.0875 0.1125 0 0 0</pose> <!-- Position: 0.175×0.175×0.225 → 0.0875×0.0875×0.1125 -->
      <collision name="front_left_leg_collision">
        <geometry>
          <cylinder>
            <radius>0.0125</radius> <!-- Radius: 0.025 → 0.0125 -->
            <length>0.225</length> <!-- Length: 0.45 → 0.225 -->
          </cylinder>
        </geometry>
      </collision>
      <visual name="front_left_leg_visual">
        <geometry>
          <cylinder>
            <radius>0.0125</radius>
            <length>0.225</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.5 0.3 0.1 1</ambient>
          <diffuse>0.5 0.3 0.1 1</diffuse>
        </material>
      </visual>
    </link>

    <!-- ========== FRONT RIGHT LEG (Half Size) ========== -->
    <link name="front_right_leg">
      <pose>-0.0875 0.0875 0.1125 0 0 0</pose> <!-- X: -0.175 → -0.0875 -->
      <collision name="front_right_leg_collision">
        <geometry>
          <cylinder>
            <radius>0.0125</radius>
            <length>0.225</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="front_right_leg_visual">
        <geometry>
          <cylinder>
            <radius>0.0125</radius>
            <length>0.225</length>
