    <!-- ========== FIXED JOINTS ========== -->
    <joint name="seat_to_front_left_leg" type="fixed">
      <parent>seat</parent>
      <child>front_left_leg</child>
    </joint>

    <joint name="seat_to_front_right_leg" type="fixed">
      <parent>seat</parent>
      <child>front_right_leg</child>
    </joint>

    <joint name="seat_to_back_left_leg" type="fixed">
