    <!-- ========== BACK LEFT LEG (Half Size) ========== -->
    <link name="back_left_leg">
      <pose>0.0875 -0.0875 0.1125 0 0 0</pose> <!-- Y: -0.175 → -0.0875 -->
      <collision name="back_left_leg_collision">
        <geometry>
          <cylinder>
            <radius>0.0125</radius>
            <length>0.225</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="back_left_leg_visual">
        <geometry>
          <cylinder>
